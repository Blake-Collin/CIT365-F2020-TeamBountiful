@page
@model MegaDeskWeb.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="" type="text/css" />
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:wght@600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Varela&display=swap" rel="stylesheet">
</head>
<h1>Create</h1>
<hr />
<h4>DeskQuote</h4>
<hr />
@* Put the Form into columns to make it easier to see -- Lance Wilson *@
        <form method="post">
            <div class="row">
                <div class="col">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="DeskQuote.customerName" class="control-label"></label>
                        <input asp-for="DeskQuote.customerName" class="form-control" />
                        <span asp-validation-for="DeskQuote.customerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DeskQuote.desk.deskWidth" class="control-label"></label>
                        <input asp-for="DeskQuote.desk.deskWidth" class="form-control" />
                        <span asp-validation-for="DeskQuote.desk.deskWidth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DeskQuote.desk.deskDepth" class="control-label"></label>
                        <input asp-for="DeskQuote.desk.deskDepth" class="form-control" />
                        <span asp-validation-for="DeskQuote.desk.deskDepth" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label asp-for="DeskQuote.desk.numOfDrawers" class="control-label"></label>
                        <input asp-for="DeskQuote.desk.numOfDrawers" class="form-control" />
                        <span asp-validation-for="DeskQuote.desk.numOfDrawers" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DeskQuote.desk.material" class="control-label"></label>
                        <select asp-for="@Model.matieralID" class="form-control" asp-items="@Model.deskMaterials "></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="DeskQuote.RushShipping" class="control-label"></label>
                        <select asp-for="@Model.shipID" class="form-control" asp-items="@Model.shipping"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />                
            </div>
        </form>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
