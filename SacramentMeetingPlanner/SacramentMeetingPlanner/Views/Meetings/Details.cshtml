@model SacramentMeetingPlanner.Models.MeetingView

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/meetings.css" type="text/css" />
</head>
<body id="HomepageBody">
    <div id="myBody">
        <h1>Details</h1>

        <div>
            <h4 style="text-align:center;">Meeting</h4>
            <hr />
            <dl class="row" style="text-align: left;">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Date)
                </dt>

                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.Date)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Conducting)
                </dt>
                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.Conducting)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OpeningHymn)
                </dt>
                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.OpeningHymn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Invocation)
                </dt>
                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.Invocation)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SacramentHymn)
                </dt>
                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.SacramentHymn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SacramentPrayer)
                </dt>
                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.SacramentPrayer)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ClosingHymn)
                </dt>
                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.ClosingHymn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Benediction)
                </dt>
                <dd class="col-sm-10" style="text-align: right;">
                    @Html.DisplayFor(model => model.Benediction)
                </dd>


                <table id="table" style="margin:0 auto; width:90%;">
                    <tr>
                        <th class="d-md-table-cell" style="text-align: left;">Speaker</th>
                        <th class="d-md-table-cell" style="text-align: right;">Topic</th>
                    </tr>
                    @{ int counter = 0;
                        foreach (Speaker s in Model.Speakers)
                        {
                            <tr id="tablerow@(counter)" style="width:100%;">
                                <td style="text-align: left;">
                                    <p name="Speakers[@counter].Name">@s.Name</p>
                                </td>
                                <td style="text-align: right;">
                                    <p name="Speakers[@counter].Topic">@s.Topic</p>
                                </td>
                            </tr>
                            counter++;
                        }
                    }

                </table>



            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</body>